<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/digerarka"
    android:orientation="vertical"
    tools:context=".newDokuman">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/text_dokumannumarasi2"
            android:layout_width="180dp"
            android:layout_height="46dp"
            android:background="@drawable/editarka"
            android:ems="10"
            android:gravity="center"
            android:hint="Döküman Numarası Giriniz"
            android:inputType="textPersonName"
            android:textColor="#6F000000"
            android:textColorHint="#6F000000"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_kayitet"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/butonresim"
            android:text="ARA"
            android:textColor="#000000" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_dokumansevk"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/editarka"
        android:ems="10"
        android:gravity="center"
        android:hint="Döküman Sevk Tarihi"
        android:inputType="textPersonName"
        android:textColor="#6F000000"
        android:textColorHint="#6F000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/text_dokumannumarasi"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/editarka"
        android:ems="10"
        android:gravity="center"
        android:hint="Döküman Numarası"
        android:inputType="textPersonName"
        android:textColor="#6F000000"
        android:textColorHint="#6F000000"
        android:textSize="15sp" />



    <TextView
        android:id="@+id/text_dokumantipi"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/editarka"
        android:ems="10"
        android:gravity="center"
        android:hint="Döküman Tipini"
        android:inputType="textPersonName"
        android:textColor="#6F000000"
        android:textColorHint="#6F000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/text_kayiteden"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/editarka"
        android:ems="10"
        android:gravity="center"
        android:hint="Dökümanı Kayıt Eden"
        android:inputType="textPersonName"
        android:textColor="#6F000000"
        android:textColorHint="#6F000000"
        android:textSize="15sp" />



    <TextView
        android:id="@+id/deneme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="654dp"
        android:textColor="#FFFFFF" />

</LinearLayout>